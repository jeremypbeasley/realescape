html {
  font-size: 16px;
  font-family: typeface-primary, serif;
}

@media laptop {
	html {
		font-size: 16px;
	}
}

body, p {
	font-size: 1rem;
}

p {
	line-height: 180%;
	margin: -.5em 0 1.5em 0;
	text-align: left;
  color: #000;
}

.unselectable {
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}

i, em {
	font-style: normal;
}

i {
  font-family: typeface-primary-italic;
}

em {
	font-family: CircularStdBook;
	font-size: .9rem;
	margin-bottom: 2rem;
	margin-top: 2rem;
}

.small i, em {
	font-family: CircularStdBook;
	font-size: .85rem;
}

a, a:focus, *:focus {
	outline: none;
	-webkit-tap-highlight-color: rgba(0,0,0,0);
	color: text-color;
	border-bottom: 1px solid black;
	text-decoration: none;
	color: color-text;
}

// TODO: Make the class to style this on the <a> itself, not it's parent

.underlined a {
	padding-bottom: 3px;
	border-bottom: #000 solid 1px;
	color: #000;
	font-family: typeface-secondary;
	font-size: .9rem;
	transition: all 200ms ease-out;
}

a.NoUnderlined {
  border: none;
}

ul {
	list-style: circle;
}

ul, ol {
  padding: 0px;
  margin: 0 0 1rem 0;
}

li {
  margin: -0.5rem 0 .5rem 3rem;
  line-height 180%;
}

// Headings

h1,h2,h3,h4,h5,h6 {
	margin: 0 0;
	padding: 0 0;
	font-family: typeface-secondary;
	font-weight: normal;
	line-height: 130%;
	position: relative;
	z-index: 9999;
}

h1 {
	font-size: 9vw;
	margin-top: -1vw;
	font-family: typeface-primary;
}

@media laptop {
	h1 {
		font-size: 7.5vw;
	}
}

h2 {
	font-size: 8vw;
	font-family: typeface-secondary;
	margin: 0em 0 1em 0;
  z-index: 15;
}

@media laptop {
	h2 {
		font-size: 4vw;
    // Offsets empty space from font
		margin: -.53rem 0px 2.5rem 0px;
	}
}

// TODO: Why are these the same style?

h3, h4 {
	font-size: .9rem;
	font-family: typeface-secondary;
	margin-bottom: 10vw;
}

@media laptop {
	h3, h4 {
		margin-bottom: 2rem;
	}
}

