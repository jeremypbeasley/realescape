html {
  font-size: 16px;
  font-family: typeface-body, serif;
}
@media laptop {
	html {
		font-size: 16px;
	}
}
body, p {
	font-size: 1rem;
}
.unselectable {
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
}
p {
	line-height: 180%;
	margin: -.5em 0 1.5em 0;
	text-align: left;
}
.lead p {
	font-size: 1.25rem;
	font-weight: lighter;
}
.noTop p {
	padding-top: 0px;
	margin-top: -.5em;
}
i, em {
	font-family: typeface-body-italic;
	font-style: normal;
}
.small i, em {
	font-family: CircularStdBook;
	font-size: .85rem;
	opacity: .4;
}
em {
	font-family: CircularStdBook;
	font-size: .9rem;
	margin-bottom: 2rem;
	margin-top: 2rem;
}
a { 
	border-bottom: 1px solid black;
}
.col-md-4 p {
	text-align: left;
}
a {
	text-decoration: none;
	color: text-color;
}
.cta a {
	font-family: typeface-h3;
	font-size: .9rem;
	padding: .5rem .8rem;
	border: 1px solid;
	transition: all 200ms ease-out;
	position: relative;
	top: 1.2rem;
	background: transparent;
	color: black;
	border-color: black;
	cursor: pointer;
}
a:hover {
	background: black;
	color: white;
	border-color: black;
}
.inverted a {
	border-color: white;
	color: white;
	background: transparent;
}
.inverted a:hover {
	border-color: white;
	background: white;
	color: black;
}
ul {
	list-style: circle;
}
ul, ol {
  padding: 0px;
  margin: 0 0 1rem 0;
}
li {
  margin: -0.5rem 0 .5rem 3rem;
  line-height 180%;
 }
strong {
	font-weight: normal;
}
h1,h2,h3,h4,h5,h6 {
	margin: 0 0;
	padding: 0 0;
	font-family: typeface-h1;
	font-weight: normal;
	line-height: 130%;
	position: relative;
	z-index: 9999;
}
i {
	font-style: normal;
}
h1 {
	font-size: 9vw;
	margin-top: -1vw;
	font-family: typeface-h1;
}
@media laptop {
	h1 {
		font-size: 7.5vw;
	}
}
h2 {
	font-size: 8vw;
	font-family: typeface-h3;
	margin: 0em 0 1em 0;
}
@media laptop {
	h2 {
		font-size: 4vw;
		margin: -.53rem 0px 2.5rem 0px;
	}
}
h3, h4 {
	font-size: .9rem;
	font-family: typeface-h3;
	margin-bottom: 10vw;
}
@media laptop {
	h3, h4 {
		margin-bottom: 2rem;
	}
}

// BUTTONS

.underlined a {
	padding-bottom: 3px;
	border-bottom: #000 solid 1px;
	color: #000;
	font-family: typeface-h3;
	font-size: .9rem;
	transition: all 200ms ease-out;
}
a:hover {
	border-color: brand-red-color;
	color: brand-red-color;
}
.quote {
	position: relative;
	z-index: 15 !important;
}
h2 {
	font-family: typeface-body-italic;
	z-index: 15;
}
p {
	color: #999;
}
span {
	position: absolute;
	left: -.4em;
}
		
// POSTS

.PostContent h1 {
	font-size: 1.5rem;
	line-height: 200%;
	margin: 1rem 0;
}
@media laptop {
	.PostContent {
		font-size: 2rem;
	}
}
.PostContent h2 {
	font-size: 1.7rem;
}
@media laptop {
	.PostContent h2 {
		font-size: 2rem;
	}
}
.PostContent h3 {
	font-size: 1rem;
}
.PostContent em {
	margin: 2em 0;
	display: block;
}
.PostContent sup {
	font-size: 50%;
	top: -1em;
}
.PostContent img {
	width: 100vw;
	margin: 2rem 0;
}
@media laptop {
	.PostContent img {
		width: 50vw;
		margin: 2em;
	}
}
