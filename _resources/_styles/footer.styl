footer {
	margin-bottom: 5.5vw;
	margin-top: -15vw;
}

@media laptop {
	footer { 
		margin-top 5.5vw;
	}
}

footer a {
	margin-right: 10px;
	border: none;
}

footer a:hover {
	color: #000;
}

footer .social {
	margin-top: .5em;
	display: block;
}

footer .social a {
	width: 25px;
	height: 25px;
	text-indent: -9999px;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: top left;
	text-indent: -9999px;
	display: block;
	color: #999;
	display: block;
	float: left;
}

footer .social a:hover {
	opacity: .4;
}

footer a.facebook {
	background-image: url(_img/icon_facebook.svg);
}

footer a.twitter {
	background-image: url(_img/icon_twitter.svg);
}

footer a.linkedin {
	background-image: url(_img/icon_linkedin.svg);
}

.bottomLine {
	width: 100%;
	height: 1px;
	background: black;
	margin-bottom: 11vw;
	opacity: 1;
}

@media laptop {
	.bottomLine {	
		height: 1px;
		margin-bottom: 11vw;
	}
}

.BackToTop {
	width: 100%;
	font-family: typeface-secondary;
	font-size: .9rem;
	padding: 1rem .8rem;
	border: 1px solid;
	transition: all 200ms ease-out;
	color: white;
	cursor: pointer;
	background: black;
	margin: 2vw;
	text-align: center;
	margin-bottom: 11vw;
}

@media tablet {
	.BackToTop {
		display: none;
	}
}

.copyright {
	display: flex;
	flex-direction: column;
}

@media laptop {
	.copyright {
		flex-direction: row;
	}
}

