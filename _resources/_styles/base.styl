// TODO: Refactor with clean, valid CSS, not stylus

html
    min-height 100%

*
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    -webkit-font-smoothing antialiased
    font-smoothing antialiased
    box-sizing border-box

body
    height 100%
    overflow-y auto
    overflow-x hidden
    margin 0

body.state-menu-open
    overflow hidden

img
    max-width 100%

.hidden
	display none
	opacity 0

 .linkedin
     cursor pointer

.line
    width 8rem
    height 1px
    background black
    margin-bottom 10vw
    @media laptop
        height 1px
        margin-bottom 4.5vw


.home
    .row.header h1
        @media laptop
            width 90%
    .heading h1
        width 105%
    .heading
        margin-bottom 10vw

.teamMember
    .portrait
        width 100%
        padding-bottom 75%
        height 0px
        display block
        margin-bottom 3rem
        background-size 100%
        background-position bottom center


.aValue
    @media laptop
        margin-bottom 5vw


// home

.OurGoal
    margin-top 55vw
    @media tablet
        margin-top 0vw
        min-height 48vw
    h2
        border-top 1px solid black
        padding-top 3rem
        @media tablet
            padding-top 6rem
            border-top 1px solid black

//DONATIONCTA

.DonationCTA
    background-color black
    background-image url(/_img/blog_donatebg_desktop.jpg)
    background-repeat no-repeat
    //color white
    background-size cover
    background-position bottom right
    z-index 999
    position relative
    margin-top -18.5vw
    margin-bottom 20vw
    padding-top 10vw
    color white
    .row
        padding 9vw
    p
        text-align left
    @media tablet
        padding-top 0px
        margin-bottom 0px
        margin-top 4.5vw
        background-position bottom center

.social
    display none
    @media laptop
        display block

//EVENTS

.EventsItem, .JobsItem, .NeedsItem
    &:last-of-type
        padding-bottom 0px
        .BreakLine
            display none

.EventsItem
    p
        text-align left

.BreakLine
    height: 1px;
    background-color: black;
    margin: 0 auto;
    margin-top: 5vw;
    margin-bottom: -4vw;
    width: 95%;

.events
    .EventsThumbnail
        opacity 0
        width 100%
        height 0px
        padding-bottom 100%
        background-color #f2f2f2
        background-size cover
        background-position center center
        transition background-blend-mode 200ms ease-out
    .post
        h2
            margin-top -.33em

//NEEDS

.NeedsItem
    margin-bottom 11vw
    @media laptop
        margin-bottom 0px

.NeedsContents
    margin-top -22vw
    @media laptop
        margin-top 0px

//SERVICES

.RotatedHeadline
    transform: rotate(-90deg);
    transform-origin: 0 0;
    margin-left: -0.3em;
    margin-top: 2em;

.linked
    transition color 100ms ease-out
    cursor pointer


.site_prompt {
  background: black;
  padding: 2rem;
  color: white;
  z-index: 99;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.site_prompt p {
  color: white;
  max-width: 60em;
  padding: 0;
  margin: 0;
}

.site_prompt a,
.site_prompt p a {
  color: white;
  padding-bottom: .3em;
  border-bottom: .02em solid #ccc;
}

.site_prompt_close {
  width: 48px;
  height: 48px;
  position: absolute;
  top: 1rem;
  right: 1rem;
  cursor: pointer;
}
