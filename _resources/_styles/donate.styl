.DonateAnony
	display block
	padding 1rem 0  2rem 0
	overflow visible
	cursor pointer

// .DonateCheckbox
// 	display none

.DonateCheckboxLabel span
	margin-top -1.4rem
	display block
	padding-left 2rem
	opacity 1
	cursor pointer

.DonateCheckboxLabel:before {
  content: "";
  display: inline-block;
  border: 1px solid #d4dbde;
  padding: 8px;
  margin-right: 15px;
  background: #ffffff;
}
/* checked checkbox - black outline and background image for check */

.DonateCheckbox:checked + .DonateCheckboxLabel:before {
  border: 1px solid #000000;
  background: url(http://i.imgur.com/sIC2cFV.png) no-repeat center center;
  background-size 70%;

}

.DonatePerson
	height 0px
	transition all 200ms ease-out
	overflow hidden
	&.open
		height 13.5rem

.DonateError
	background #FFE1E1
	border 1px solid #FFBFBF
	padding .5rem 1rem
	color red
	margin-bottom 1rem
	margin-top 0px

.DonateConfirmation
	position fixed
	height 100vh
	width 100vw
	background black
	color white
	z-index 99999999999
	top 0px
	transition all 200ms ease-out
	//opacity 0
	//display none
	.line
		background white
		margin-left 0px
		margin-bottom 3rem
		width 5rem
	div
		width 80%
		margin 0 auto
		position: relative;
		top: 7%
		p
			text-align left
		@media tablet
			width 40%
			top: 50%;
			transform: translateY(-50%);

.DonateConfirmation.open
	display:block;
	opacity:1;


input::-webkit-input-placeholder, input:-moz-placeholder, input::-moz-placeholder, input:-ms-input-placeholder {  
   opacity: 0; 
   display: none
}

.DonateRecurring
	width 100%
	margin-bottom 1rem
	display block
	overflow auto
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
	@media laptop
		margin-bottom 3rem
	
.DonateRecurringItem
	width 100%
	background #f2f2f2
	padding 1rem
	padding-bottom .6rem
	display inline-block
	margin-bottom .5rem
	float left
	cursor pointer
	transition all 200ms ease-out
	&:hover
		background hsla(0,0,0,.1)
	@media laptop	
		width 50%
		margin-bottom 0
		margin-right 2px
		&:nth-child(2)
			width calc(50% - 2px)
			margin-right 0
	
.DonateRecurringItem p, .DonateRecurringItem input
	margin 0
	padding 0
	display inline-block

.DonateRecurringItem p
	top -2px
	position relative
	
	
.DonateRecurringWarning
	margin-top 2rem
	display inline-block
	width 100%
	max-height 0px
	overflow hidden
	transition all 200ms ease-out
	&.Open	
		max-height 10rem
		
.DonateRecurringWarning p
	padding-top .5rem


